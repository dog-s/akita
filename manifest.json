{
	"name":"Akita",
	"version":"0.0.1",
	"manifest_version": 2,
	"description":"A browser extension that gives you insight into your involvement with web monetization.",
	"permissions":[
		"tabs",
		"activeTab",
		"<all_urls>"
	],
	"background": {
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>", "http://*/*", "https://*/*"],
			"js": ["popup.js"]
		}
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Akita"
	}
}
