{
	"name":"Akita",
	"version":"0.0.2",
	"manifest_version": 2,
	"description":"A browser extension that gives you insight into your involvement with web monetization.",
	"permissions":[
		"tabs",
		"activeTab",
		"<all_urls>",
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>", "http://*/*", "https://*/*"],
			"js": ["WebMonetizationAsset.js", "AkitaPaymentPointerData.js", "AkitaOriginData.js", "storage.js", "content_main.js"]
		}
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Akita"
	}
}
