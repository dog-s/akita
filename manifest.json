{
	"name":"Akita",
	"version":"0.0.2",
	"manifest_version": 2,
	"description":"A browser extension that gives you insight into your involvement with web monetization.",
	"permissions":[
		"tabs",
		"activeTab",
		"<all_urls>",
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>", "http://*/*", "https://*/*"],
			"js": [
				"src/data/WebMonetizationAsset.js",
				"src/data/AkitaPaymentPointerData.js",
				"src/data/AkitaOriginData.js",
				"src/data/storage.js",
				"src/content_main.js"
			]
		}
	],
	"browser_action": {
		"default_icon": "assets/icon.png",
		"default_popup": "src/popup/popup.html",
		"default_title": "Akita"
	}
}
